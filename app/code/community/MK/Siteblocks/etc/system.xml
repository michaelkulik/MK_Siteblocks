<?xml version="1.0"?>
<config>
    <tabs>
        <mk translate="label" module="siteblocks">
            <label>MK Siteblocks</label>
            <sort_order>7</sort_order>
        </mk>
    </tabs>
    <sections>
        <siteblocks translate="label" module="siteblocks">
            <label>Siteblocks</label>
            <tab>mk</tab>
            <frontend>text</frontend>
            <expanded>0</expanded>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label" module="siteblocks">
                    <label>Settings</label>
                    <expanded>1</expanded>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label" module="siteblocks">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>siteblocks/source_status</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <siteblock_count translate="label comment" module="siteblocks">
                            <label>Siteblock count</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Count of blocks on one output</comment>
                            <depends><enabled>1</enabled></depends>
                        </siteblock_count>
                        <raw_text translate="label comment" module="siteblocks">
                            <label>Raw Text</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_Website>1</show_in_Website>
                            <show_in_store>1</show_in_store>
                            <comment>Some additional text</comment>
                            <depends><enabled>1</enabled></depends>
                        </raw_text>
                    </fields>
                </settings>
            </groups>
        </siteblocks>
    </sections>
</config>
